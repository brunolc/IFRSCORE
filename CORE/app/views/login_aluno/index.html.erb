<%= form_tag({action: 'login'}, class: 'form-signin', method: 'post') do %>

    <h2 class="form-signin-heading">Login do Aluno</h2>
    <input type="text" name="matricula"
        class="form-control" placeholder="Sua matricula" required autofocus style="width: 258px;">
    <input type="password"  name="senha"
        class="form-control" placeholder="Sua senha" required style="width: 258px;">
    <button class="btn btn-lg btn-primary btn-block" id="vai" type="submit" style="width: 258px;">Login</button>

<% end %>

<div id="centro">
<%= link_to "cadastre-se", new_aluno_path %>
</div>